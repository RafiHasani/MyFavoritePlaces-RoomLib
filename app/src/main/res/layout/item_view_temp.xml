<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#C0B0FF"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="fill_vertical"
        android:gravity="center_vertical|fill_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="34dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            tools:srcCompat="@drawable/hearth"></ImageView>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@id/img"
            android:ellipsize="end"
            android:gravity="center_vertical|fill_vertical"
            android:maxLines="1"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"></TextView>

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/img"
            android:text="Description"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>
    </RelativeLayout>


</androidx.cardview.widget.CardView>